---
import { format } from 'date-fns';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
}

const { title, description, pubDate, url } = Astro.props;
---

<article class="group border border-text-light/10 dark:border-text-dark/10 rounded-lg p-6 transition-all duration-300 hover:border-primary hover:shadow-[0_0_15px_rgba(59,130,246,0.1)]">
  <a href={url} class="block h-full">
    <h2 class="text-2xl font-bold mb-2 group-hover:text-primary transition-colors duration-300">{title}</h2>
    <div class="text-text-light/60 dark:text-text-dark/60 mb-4">
      <time datetime={pubDate.toISOString()}>
        {format(pubDate, 'MMMM d, yyyy')}
      </time>
    </div>
    <p class="text-text-light/80 dark:text-text-dark/80">{description}</p>
  </a>
</article>